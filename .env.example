# PPM Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ppm
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ppm
DB_USER=postgres
DB_PASSWORD=your_password_here

# API Keys
CHATGPT_API_KEY=sk-your_openai_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
PREDICTHQ_API_KEY=your_predicthq_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here
MAPBOX_API_KEY=pk.your_mapbox_token_here

# Social Media APIs (Optional)
TWITTER_API_KEY=your_twitter_api_key_here
FACEBOOK_API_KEY=your_facebook_api_key_here

# Traffic and Economic APIs (Optional)
TRAFFIC_API_KEY=your_traffic_api_key_here
ECONOMIC_API_KEY=your_economic_api_key_here

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# ML Configuration
MODEL_PATH=features/ml/data/models/
ML_BATCH_SIZE=1000
FEATURE_CACHE_HOURS=1
PREDICTION_CACHE_MINUTES=15

# Geographic Bounds (Kansas City)
BBOX_NORTH=39.3209
BBOX_SOUTH=38.9517
BBOX_EAST=-94.3461
BBOX_WEST=-94.7417

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
